{
	"name": "wikimedia/relpath",
	"description": "Compute a relative filepath between two paths.",
	"license": "MIT",
	"homepage": "https://www.mediawiki.org/wiki/RelPath",
	"authors": [
		{
			"name": "Ori Livneh",
			"email": "ori@wikimedia.org"
		}
	],
	"autoload": {
		"files": [
			"src/Wikimedia/RelPath.php"
		]
	},
	"require": {
		"php": ">=7.2.9"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "33.0.0",
		"mediawiki/minus-x": "1.1.0",
		"ockcyp/covers-validator": "1.3.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"phpunit/phpunit": "^8.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"phpcs -sp",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
